pipeline {
    agent {
        node {
            label 'maven'
        }
    }
    environment {
        PATH = "/opt/apache-maven-3.9.2/bin:$PATH"
        scannerHome = tool 'jkhan-sonarqube-scanner'  // Define SonarQube scanner tool here
    }

    stages {
        stage('Build Maven') {
            steps {
                dir('tweet_java_app') {
                    sh 'mvn clean deploy'
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('jkhan-sonarqube-server') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }
}
