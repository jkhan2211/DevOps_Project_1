pipeline {
    agent {
        node {
            label 'maven'
        }
    }
environment {
    PATH = "/opt/apache-maven-3.9.2/bin:$PATH"
}

    stages {
        stage('build') {
            steps {
                sh 'mvn clean deploy'
            }
        }
    }


       stages {
        environment {
            def scannerHome = tool 'jkhan-sonarqube-scanner'
        }
        steps {
            withSonarQubeEnv('jkhan-sonarqube-server') {
                sh "${scannerHome}/bin/sonar-scanner"
            }

        }
    }
}